@model IEnumerable<DoAnASP.Areas.Admin.Models.Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}
<main>
    <!-- Slider Area Start-->
    <div class="slider-area slider-bg ">
        <!-- Single Slider -->
        <div class="single-slider d-flex align-items-center slider-height3">
            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-xl-8 col-lg-9 col-md-12 ">
                        <div class="hero__caption hero__caption3 text-center">
                            <h1 data-animation="fadeInLeft" data-delay=".6s ">HOME</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Slider Shape -->
        <div class="slider-shape d-none d-lg-block">
            <img class="slider-shape1" src="~/assets/img/hero/top-left-shape.png" alt="">
        </div>
    </div>
    <!-- Slider Area End -->
    <!-- Hero Area End-->
    <!--? Blog Area Start-->
    <section class="blog_area section-padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mb-5 mb-lg-0">
                    <div class="blog_left_sidebar">
                        <article class="blog_item">
                            @foreach (var item in ViewBag.blogs)
                            {
                                @if (item.TrangThai == 2)
                                {
                                    @if (item.HinhAnh != null)
                                    {
                                    <div class="blog_item_img" >
                                        <img class="card-img rounded-0" src="~/blog/@item.HinhAnh"style="width : 300px;" >
                                        <a asp-action="Details" asp-route-id="@item.IDBlog" asp-controller="Blogs" class="blog_item_date">
                                            <h3>@item.NgayTao</h3>
                                            <p></p>
                                        </a>
                                    </div>
                                    }
                                    <div class="blog_details">
                                        <a class="d-inline-block" asp-action="Details" asp-route-id="@item.IDBlog" asp-controller="Blogs">
                                            <h2 class="blog-head" style="color: #2d2d2d;">@item.TieuDe</h2>
                                        </a>
                                        <p>
                                            @item.TomTat
                                        </p>
                                        <ul class="blog-info-link">

                                            <li><a href="#"><i class="fa fa-eye"></i> @item.View</a></li>
                                            @if (item.IDNguoiTao.ToString() == ViewBag.IDName)
                                            {
                                                <li>

                                                    <span><a asp-action="Xoa" asp-controller="Blogs" asp-route-id="@item.IDBlog"> <i class="fa fa-trash"></i> Xóa bài viết </a></span>



                                                </li>
                                                <li>
                                                    <span><a asp-action="Edit" asp-route-id="@item.IDBlog"> <i class="fa fa-edit"></i> sua Bai viet </a></span>



                                                </li>
                                            }
                                        </ul>
                                    </div>
                                }
                            }
                        </article>
                        <article class="blog_item">
                            @foreach (var item in ViewBag.cauhois)
                            {
                                @if (item.TrangThai == 2)
                                {
                                    <div class="blog_item_img">
                                        <img class="card-img rounded-0" src="~/cauhoi/@item.HinhAnh"style="width : 300px;">
                                        <a asp-action="Details" asp-route-id="@item.IDBlog" asp-controller="CauHois" class="blog_item_date">
                                            <h3>@item.NgayTao</h3>
                                            <p></p>
                                        </a>
                                    </div>
                                    <div class="blog_details">
                                        <a class="d-inline-block" asp-action="Details" asp-route-id="@item.IDBlog" asp-controller="CauHois">
                                            <h2 class="blog-head" style="color: #2d2d2d;">@item.TieuDe</h2>
                                        </a>
                                        <p>
                                            @item.TomTat
                                        </p>
                                        <ul class="blog-info-link">

                                            <li><a href="#"><i class="fa fa-eye"></i> @item.View</a></li>

                                            @if (item.IDNguoiTao.ToString() == ViewBag.IDName)
                                            {
                                                <li>

                                                    <span><a asp-action="Xoa" asp-controller="Blogs" asp-route-id="@item.IDBlog"> <i class="fa fa-trash"></i> Xóa bài viết </a></span>



                                                </li>
                                                <li>
                                                    <span><a asp-action="Edit" asp-route-id="@item.IDBlog"> <i class="fa fa-edit"></i> sua Bai viet </a></span>



                                                </li>
                                            }
                                        </ul>
                                    </div>
                                }
                            }
                        </article>
                        <nav class="blog-pagination justify-content-center d-flex">
                            <ul class="pagination">
                                <li class="page-item">
                                    <a href="#" class="page-link" aria-label="Previous">
                                        <i class="ti-angle-left"></i>
                                    </a>
                                </li>
                                <li class="page-item">
                                    <a href="#" class="page-link">1</a>
                                </li>
                                <li class="page-item active">
                                    <a href="#" class="page-link">2</a>
                                </li>
                                <li class="page-item">
                                    <a href="#" class="page-link" aria-label="Next">
                                        <i class="ti-angle-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="blog_right_sidebar">
                        <aside class="single_sidebar_widget search_widget">
                            <form action="#">
                                <div class="form-group">
                                    <div class="input-group mb-3">
                                        <form asp-controller="Blogs" asp-action="timkim" method="get">
                                            <input type="text" name="SearchString" class="form-control" placeholder='Search Keyword'
                                                   onfocus="this.placeholder = ''"
                                                   onblur="this.placeholder = 'Search Keyword'">
                                            
                                        </form>
                                           
                                            <div class="input-group-append">
                                                <button class="btns" type="submit"><i class="ti-search"></i></button>
                                            </div>
                                    </div>
                                </div>
                                <button class="button rounded-0 primary-bg text-white w-100 btn_1 boxed-btn"
                                        type="submit">
                                    Search
                                </button>
                            </form>
                        </aside>

                        @await Html.PartialAsync("_Loai")
                    </div>
                </div>
               
            </div>
        </div>
    </section>
    <!-- Blog Area End -->
</main>

