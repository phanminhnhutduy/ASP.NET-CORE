@model IEnumerable<DoAnASP.Areas.Admin.Models.Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}

<div class="main">
    <div class="content">
        @*@foreach (var item1 in ViewBag.t)
        { @item1.Ten}*@

        @foreach (var item in ViewBag.blogs)
        {
            <div class="box1" >
                <h3><a asp-action="Details" asp-route-id="@item.IDBlog" asp-controller="Blogs">@item.TieuDe</a></h3>
                <span>

                    @item.NgayTao
                </span>
                <div class="view">
                    <div class="view-back">
                        <span class="views" title="views">@item.View</span>
                        <a asp-action="Details" asp-route-id="@item.IDBlog" asp-controller="Blogs"> </a>
                    </div>
                    <a asp-action="Details" asp-route-id="@item.IDBlog" asp-controller="Blogs"><img src="~/blog/@item.HinhAnh" width="100%" hight="100px"></a>
                </div>
                <div class="data" >
                    <p style="background :#d7d7d7">@item.NoiDung</p>
                    <span><a asp-action="Details" asp-route-id="@item.IDBlog" asp-controller="Blogs">Continue reading &gt;&gt;&gt;</a></span>
                </div>
                <div class="clear"></div>
            </div>
        }
        @foreach (var item in ViewBag.cauhois)
        {
            <div class="box1">
                <h3><a asp-action="Details" asp-route-id="@item.IDBlog" asp-controller="Blogs">@item.TieuDe</a></h3>
                <span>
                    @item.NgayTao
                </span>
                <div class="view">
                    <div class="view-back">
                        <span class="views" title="views">@item.View</span>
                        <a asp-action="Details" asp-route-id="@item.IDBlog" asp-controller="Blogs"> </a>
                    </div>
                    <a asp-action="Details" asp-route-id="@item.IDBlog" asp-controller="Blogs"><img src="~/blog/@item.HinhAnh"></a>
                </div>
                <div class="data">
                    <p style="background :#d7d7d7">@item.NoiDung</p>
                    <span><a asp-action="Details" asp-route-id="@item.IDBlog" asp-controller="Blogs">Continue reading &gt;&gt;&gt;</a></span>
                </div>
                <div class="clear"></div>
            </div>
        }
    </div>
    <div class="page_links">
        <div class="sidebar">
            <div class="sidebar_top">
                <h3>Blog Categories</h3>
                <div class="sidebar_top_list">
                    @foreach (var item in ViewBag.Loai)
                    {
                        <ul>
                            <li><a asp-action="Index" asp-controller="Loais"><span class="category-name">@item.TieuDe</span> <div class="clear"></div></a></li>

                        </ul>
                    }
                </div>
            </div>
            <div class="clear"></div>
        </div>
        <div class="clear"></div>
        <div class="page_bottom">
            <p>Back To : <a href="#">Top</a> |  <a href="#">Home</a></p>
        </div>
    </div>
</div>