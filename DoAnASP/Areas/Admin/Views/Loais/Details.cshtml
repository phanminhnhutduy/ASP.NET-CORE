@model DoAnASP.Areas.Admin.Models.Loai

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Loai</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
      Tiêu Đề
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TieuDe)
        </dd>
        <dt class = "col-sm-2">
           Ngày Tạo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NgayTao)
        </dd>
        <dt class = "col-sm-2">
        Người Tạo
        </dt>
        <dd class="col-sm-10">
            @foreach (var item1 in ViewBag.tentk)
            {
                @if (Model.IDNguoiTao == item1.IDTK)
                {
                    @item1.Ten;
                }
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.IDLoai">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
